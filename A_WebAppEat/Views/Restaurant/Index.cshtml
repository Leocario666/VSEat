@model IEnumerable<DTO.Restaurant>

@{
    ViewData["Title"] = "GetRestaurants";
    
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cityCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cityCode)
            </td>
            <td>
                @Html.ActionLink("Afficher les plats du restaurant","Plat", new { id=item.restaurant_Id})
            </td>
        </tr>
}
    </tbody>
</table>
