@model IEnumerable<DTO.Restaurant>

@{
    ViewData["Title"] = "GetRestaurants";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.restaurant_Id)
            </th>
