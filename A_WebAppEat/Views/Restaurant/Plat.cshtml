@model IEnumerable<DTO.Dish>

@{
    ViewData["Title"] = "Plat";
}
<link rel="stylesheet" href="~/css/restoPlats.css">
<h2>Plats</h2>


<table class="table">
    <thead>
        <tr class="gras">
            <th>
                <p>Name</p>
            </th>
            <th>
                <p>Price</p>
            </th>
            <th>
                <p>Quantity</p>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    <input type="number" min="0" max="20" value="0" name="@item.name"/>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="time">
    <label>At what time do you want to be delivered (between 11:00 and 22:45) ? </label>
    <input type="time" min="11:00" max="22:30" step="900" />
</div>

<div class="bouton_conteneur">
    <a asp-action="Index" class="back">Back to List</a>
    <a href="@Url.Action("Command", "Restaurant")">Command</a>
</div>