@model IEnumerable<DTO.Dish>
<!--List of all dishes for a restaurant-->
    <link rel="stylesheet" href="~/css/PourTous.css" />
@{ 
    ViewData["Title"] = "Plat";
}
<link rel="stylesheet" href="~/css/restoPlats.css">
<h2>Plats</h2>

@{
    var x = "un";
    var nameconcat = "plat";
    int id = ViewBag.id;
}
<div>
    @switch (id)
    {
        case 1:
            <img src="~/images/mikasa_tacos.png" alt="logo du restaurant" />
            break;
        case 2:
            <img src="~/images/levi_couscous.png" alt="logo du restaurant" />
            break;
        case 3:
            <img src="~/images/sasha_raclette.png" alt="logo du restaurant" />
            break;
        case 4:
            <img src="~/images/jean_gourmand.png" alt="logo du restaurant" />
            break;
        case 5:
            <img src="~/images/eren_durum.png" alt="logo du restaurant" />
            break;
        case 6:
            <img src="~/images/armin_pizza.png" alt="logo du restaurant" />
            break;
        case 7:
            <img src="~/images/annie_ice_cream.png" alt="logo du restaurant" />
            break;
        case 8:
            <img src="~/images/reiner_cassoulet.png" alt="logo du restaurant" />
            break;
        case 9:
            <img src="~/images/erwin_pasta.png" alt="logo du restaurant" />
            break;
    }
</div>
@using (Html.BeginForm())
{
    <table class="table">
        <thead>
            <tr class="gras">
                <th>
                    <p>Name</p>
                </th>
                <th>
                    <p>Price</p>
                </th>
                <th>
                    <p>Quantity</p>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                nameconcat += x;
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        <select name="@nameconcat" id="@nameconcat">
                            <option value="0">0</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                        </select>
                    </td>
                </tr>
            }
        </tbody>
    </table>
        <div class="time">
            <label>At what time do you want to be delivered (between 11:00 and 22:30, every 15 minutes) ? </label>
            <input type="time" min="11:00" max="22:30" step="900" name="deliveryTime" id="deliveryTime" required />
        </div>

        <div class="bouton_conteneur">
            <a asp-action="Index" class="btn btn-default">Back to List</a>
            <input asp-action="Command" type="submit" name="Command" class="btn btn-default" />
        </div>

}
<hr />
